<Window x:Class="BarberKarpNaz.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberKarpNaz.Windows"
        mc:Ignorable="d"
        Title="MenuWindow" 
        Height="450" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF11162E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Главное окно" 
                   FontSize="25"
                   Margin="5 5"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Style="{DynamicResource txtStyle}"/>
        
        <Button Width="100" 
                Height="30" 
                Margin="0 5 420 0"
                Grid.Row="0"
                FontSize="20"
                Content="Заказы"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Style="{DynamicResource btnStyle}"
                x:Name="btnOrder"
                Click="btnOrder_Click"
                />
        
        <Button Width="110" 
                HorizontalAlignment="Right" 
                Height="30"
                FontSize="20"
                Grid.Row="0" 
                Content="Персонал"
                VerticalAlignment="Top"
                Style="{DynamicResource btnStyle}"
                Margin="0 5 140 0"
                x:Name="btnEmployee"
                Click="btnEmployee_Click"
                />
        
        <Button Width="110" 
                HorizontalAlignment="Right" 
                Height="30"
                FontSize="20"
                Grid.Row="0" 
                Content="Услуги"
                VerticalAlignment="Top"
                Style="{DynamicResource btnStyle}"
                Margin="0 5 280 0"
                x:Name="btnService"
                Click="btnService_Click"
                />
        
        <Button Width="90" 
                Height="30"
                Margin="0 5 20 0"
                FontSize="20"
                Grid.Row="0" 
                Content="Клиенты"
                Style="{DynamicResource btnStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                x:Name="btnClient"
                Click="btnClient_Click"
                />
        
        <Button Width="90" 
                Height="30"
                Margin="0 5 550 0"
                FontSize="20"
                Grid.Row="0" 
                Content="Отчеты"
                Style="{DynamicResource btnStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                x:Name="btnReport"
                Click="btnReport_Click"
                />

        <Frame x:Name="frame" 
               Grid.Row="1" 
               ContentRendered="myFrame_ContentRendered"/>


    </Grid>
</Window>
