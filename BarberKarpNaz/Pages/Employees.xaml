                </GridView>
            </ListView.View>-->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate >
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="1000" Height="100" CornerRadius="10" BorderThickness="2" BorderBrush="Black">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Image Grid.RowSpan="3" >
                                <Image.Source>
                                    <Binding Path="Image">
                                        <Binding.TargetNullValue>
                                            <ImageSource>D:\учеба\BarberKarpNaz\BarberKarpNaz\Res\human.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Фамилия" 
                           FontSize="15"
                           Grid.Column="1" 
                           Grid.Row="0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right" 
                           Margin="5" 
                           FontFamily="century gothic"/>
                            <TextBlock Text="Имя" 
                           FontSize="15" 
                           Grid.Column="1"
                           Grid.Row="1" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right" 
                           Margin="5"
                           FontFamily="century gothic"/>
                            <TextBlock Text="Телефон"
                           FontSize="15" 
                           Grid.Column="1" 
                           Grid.Row="2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right" 
                           Margin="5"
                           FontFamily="century gothic"/>

                            <TextBlock Text="{Binding Path=LastName}" 
                           FontSize="15"
                           Grid.Column="2" 
                           Grid.Row="0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" 
                           Margin="5" 
                           FontFamily="century gothic"/>
                            <TextBlock Text="{Binding Path=FirstName}" 
                           FontSize="15" 
                           Grid.Column="2"
                           Grid.Row="1" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" 
                           Margin="5"
                           FontFamily="century gothic"/>
                            <TextBlock Text="{Binding Path=Phone}"
                           FontSize="15" 
                           Grid.Column="2" 
                           Grid.Row="2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="5"
                           FontFamily="century gothic"/>

                            <TextBlock Text="Специальность" 
                           FontSize="15"
                           Grid.Column="3" 
                           Grid.Row="0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right" 
                           Margin="5" 
                           FontFamily="century gothic"/>
                            <TextBlock Text="Логин" 
                           FontSize="15" 
                           Grid.Column="3"
                           Grid.Row="1" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right" 
                           Margin="5"
                           FontFamily="century gothic"/>
                            <TextBlock Text="Пароль"
                           FontSize="15" 
                           Grid.Column="3" 
                           Grid.Row="2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right" 
                           Margin="5"
                           FontFamily="century gothic"/>

                            <TextBlock Text="{Binding Path=Speciality.NameSpeciality}" 
                           FontSize="15"
                           Grid.Column="4" 
                           Grid.Row="0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" 
                           Margin="5" 
                           FontFamily="century gothic"/>
                            <TextBlock Text="{Binding Path=Login}" 
                           FontSize="15" 
                           Grid.Column="4"
                           Grid.Row="1" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" 
                           Margin="5"
                           FontFamily="century gothic"/>
                            <TextBlock Text="{Binding Path=Password}"
                           FontSize="15" 
                           Grid.Column="4" 
                           Grid.Row="2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="5"
                           FontFamily="century gothic"/>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button x:Name="btnAdd" 
                Grid.Row="2" 
                Width="160" 
                Height="30" 
                Style="{DynamicResource btnStyle}" 
                Content="Добавить" 
                FontSize="20" 
                HorizontalAlignment="Left"
                Click="btnAdd_Click"
                Margin="5 0"/>
        
        <!--<Button x:Name="btnChange" 
                Grid.Row="2" 
                Width="160" 
                Height="30" 
                Style="{DynamicResource btnStyle}" 
                Content="Изменить" 
                FontSize="20" 
                HorizontalAlignment="Center"
                Click="btnChange_Click"/>

        <Button x:Name="btnDelete" 
                Grid.Row="2" 
                Width="160" 
                Height="30" 
                Style="{DynamicResource btnStyle}" 
                Content="Удалить" 
                FontSize="20" 
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Margin="5 0"/>-->
        <Frame x:Name="frame" Grid.RowSpan="3"/>
    </Grid>
</Page>
